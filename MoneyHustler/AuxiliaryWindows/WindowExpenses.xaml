<Window x:Class="MoneyHustler.AuxiliaryWindows.WindowExpenses"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MoneyHustler.AuxiliaryWindows"
        mc:Ignorable="d"
        Title="WindowExpenses" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="51*"/>
            <RowDefinition Height="11*"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="1" Content="Add" Margin="320,20,320,20"/>
        <StackPanel x:Name="ParentStackPanel">
            <StackPanel Orientation="Horizontal" Height="25" VerticalAlignment="Top" Margin="10,10">
                <DatePicker IsDropDownOpen="True" SelectedDateFormat="Short" Margin="10,0"/>
                <TextBox Text="Сумма " HorizontalAlignment="Center" VerticalAlignment="Center"  Margin="10,0" Padding="20,0"/>
                <TextBox Text="Кто " HorizontalAlignment="Center" VerticalAlignment="Center"  Margin="10,0" Padding="20,0"/>
                <TextBox Text="Счёт "  HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,0" Padding="20,0"/>
                <Button Content="Редактировать" Margin="10,0" Padding="10,0"/>
                <Button Content="Удалить" Margin="10,0" Padding="10,0"/>
            </StackPanel>
            
        </StackPanel>
    </Grid>


</Window>
